<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>SimplePrompt</PackageId>
    <Authors>archi-Doc</Authors>
    <Product>SimplePrompt</Product>
    <Description>A simple line editor for .NET console apps </Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/archi-Doc/SimplePrompt</PackageProjectUrl>
    <RepositoryUrl>https://github.com/archi-Doc/SimplePrompt</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <AdditionalFiles Include="..\stylecop.json" Link="stylecop.json" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Arc.Collections" Version="1.28.1" />
    <PackageReference Include="Arc.Unit" Version="0.26.0" />
    <PackageReference Include="SimpleCommandLine" Version="0.30.2" />
  </ItemGroup>

</Project>
